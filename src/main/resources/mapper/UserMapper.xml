<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nightCityBlogs.mapper.UserMapper">
    <insert id="register">
        insert into userData (userName, password,emailAddress) values (#{username},#{password},#{emailAddress})
    </insert>
    <update id="updateAddress">
        update userData
        set address = #{address}
        where id = #{id}
    </update>
    <update id="updateParam">
        update userData
        set username = #{username},
            address  = #{address}
        where id = #{id};
    </update>
    <update id="updateEmail">
        update userData
        set emailAddress = #{newEmail}
        where id = #{id};
    </update>
    <update id="updateItem">
    </update>
    <update id="uploadImg">
        update userData
        set headPortrait = #{url}
        where id = #{id};
    </update>
    <select id="selectByName" resultType="com.nightCityBlogs.pojo.Entity.UserEntity">
        select *
        from userData
        where userName = #{username}
    </select>
    <select id="selectById" resultType="com.nightCityBlogs.pojo.Vo.UserVo">
        select *
        from userData
        where id = #{id}
    </select>
</mapper>